section.request
        .request__container.container
            .request__menu
                ol.advantages
                    li.advantages__item
                        p.advantages__text
                            | Our specialist will arrive for measurements per 
                            | day contact, or appoint a date convenient for you
                    li.advantages__item
                         p.advantages__text
                            | Free metering
                    li.advantages__item
                         p.advantages__text
                            | Free consultation
                    li.advantages__item
                         p.advantages__text
                            | Get a cost estimate and the timing of your future repairs
            .request__form
                form.form(action="#").request-form
                    h3.request-form__title Leave a request for free departure of the measurer
                    .form__col 
                        .request-form__input.input.input_request
                            label(for="req_name").input__label Name
                            input(type="text" placeholder="What is your name:" name="req_name" id= "req_name" required).input__text
                    .form__col
                        .request-form__input.input.input.input_request
                            label(for="req_phone").input__label Phone
                            input(type="tel" pattern="[0-9]{3}-[0-9]{2}-[0-9]{2}" placeholder="Your phone number:" name="req_phone"  id= "req_phone" required).input__text
                    .form__col 
                        .request-form__input.input.input_request
                            label(for="req_email").input__label Email
                            input(type="email" placeholder="Your email" name="req_email" id= "req_email" required).input__text
                    .form__col
                        .checkbox.checkbox_request
                            label(for="req_agree").checkbox__label 
                                input(type="checkbox", name="req_agree" id="req_agree" checked).checkbox__input
                                span.checkbox__text I agree to the processing of personal data
                    .form__col
                        button(type="submit").form-request__btn.btn Call the measurer
                .piggy-bank.piggy-bank_margin
                    .piggy-bank__text Help save 10 - 20% of the cost of materials
